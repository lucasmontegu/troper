{
  "name": "troper",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dx": "turbo run dx",
    "lint:strict": "eslint --max-warnings=0 apps/**/*.{ts,tsx}",
    "format:check": "prettier -c \"**/*.{ts,tsx,md}\"",
    "tsc": "tsc",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.2.1",
    "@troper/eslint-config": "workspace:*",
    "@troper/typescript-config": "workspace:*",
    "@troper/utils": "workspace:*",
    "@types/validator": "^13.12.0",
    "bun-types": "^1.1.13",
    "dotenv": "^16.4.5",
    "eslint": "^9.5.0",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "0.6.5",
    "turbo": "^2.0.4",
    "typescript": "5.4.5"
  },
  "packageManager": "pnpm@8.7.5",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
